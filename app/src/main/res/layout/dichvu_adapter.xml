<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/textview"
                    android:layout_height="match_parent"
                    android:text="Tên:"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView
                    android:id="@+id/tvTen"
                    style="@style/textview"
                    android:layout_height="match_parent"
                    android:text="Là gì?"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/textview"
                    android:layout_height="match_parent"
                    android:text="Đơn giá:"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView
                    android:id="@+id/tvDonGia"
                    style="@style/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Là gì?"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/textview"
                    android:layout_height="match_parent"
                    android:text="Số lượng:"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView
                    android:id="@+id/tvSoLuong"
                    style="@style/textview"
                    android:layout_height="match_parent"
                    android:text="Là gì?"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgHinhAdapter"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/male"
                ></ImageView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/border"></TextView>
    </LinearLayout>
</LinearLayout>